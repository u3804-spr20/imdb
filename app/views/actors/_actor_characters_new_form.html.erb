<%= form_with(model: @casting, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :movie_id %>
    <%= f.select :movie_id, options_from_collection_for_select(Movie.all, :id, :to_s, @casting.movie_id), {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :actor_id, value: @actor.id %>

  <div class="form-group">
    <%= f.label :character_name %>
    <%= f.text_field :character_name, class: "form-control" %>
  </div>

  <%= f.submit "Create casting", class: "btn btn-block btn-outline-secondary" %>
<% end %>
