<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Characters

    <a data-toggle="collapse" href="#movie_characters_new_form">
      Add casting
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.characters.each do |casting| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to casting.to_s, casting_path(casting) %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to casting, method: :delete, data: { confirm: "Do you really want to delete this casting" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_characters_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
