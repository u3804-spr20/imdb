<% was_validated = casting.errors.any? %>

<%= form_with(model: casting, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% movie_id_class = "form-control" %>
    <% movie_id_was_invalid = casting.errors.include?(:movie_id) %>

    <% if was_validated %>
      <% if movie_id_was_invalid %>
        <% movie_id_class << " is-invalid" %>
      <% else %>
        <% movie_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :movie_id %>
    <%= f.select :movie_id, options_from_collection_for_select(Movie.all, :id, :to_s, @casting.movie_id), {}, class: "form-control" %>
    <% if movie_id_was_invalid %>
      <% casting.errors.full_messages_for(:movie_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% actor_id_class = "form-control" %>
    <% actor_id_was_invalid = casting.errors.include?(:actor_id) %>

    <% if was_validated %>
      <% if actor_id_was_invalid %>
        <% actor_id_class << " is-invalid" %>
      <% else %>
        <% actor_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :actor_id %>
    <%= f.select :actor_id, options_from_collection_for_select(Actor.all, :id, :to_s, @casting.actor_id), {}, class: "form-control" %>
    <% if actor_id_was_invalid %>
      <% casting.errors.full_messages_for(:actor_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% character_name_class = "form-control" %>
    <% character_name_was_invalid = casting.errors.include?(:character_name) %>

    <% if was_validated %>
      <% if character_name_was_invalid %>
        <% character_name_class << " is-invalid" %>
      <% else %>
        <% character_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :character_name %>
    <%= f.text_field :character_name, class: character_name_class, placeholder: "Enter character name" %>
    <% if character_name_was_invalid %>
      <% casting.errors.full_messages_for(:character_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
